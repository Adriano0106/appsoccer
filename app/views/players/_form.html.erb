<div class="centered">
  <%= form_with(model: player, local: true) do |form| %>
    <% if player.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

        <ul>
        <% player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group col-lg-4 col-md-5 col-sm-6 col-xs-6">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control centered" %>
    </div>

    <div class="form-group col-lg-4 col-md-5 col-sm-6 col-xs-6">
      <%= form.label :birth %>
      <%= form.number_field :birth, class: "form-control centered" %>
    </div>

    <div class="form-group col-lg-4 col-md-5 col-sm-6 col-xs-6">
      <%= form.label :clube_id %>
      <!-- <%= form.text_field :clube_id %> -->
      <%= collection_select(:player, :clube_id, Clube.all, :id, :name, {}, class: "form-control centered") %>
    </div>

    <div class="form-group col-lg-4 col-md-5 col-sm-6 col-xs-6">
      <%= form.label :trophy %>
      <%= form.number_field :trophy, class: "form-control centered" %>
    </div>

    <div class="actions">
      <%= form.submit class:"btn btn-success" %>
    </div>
  <% end %>
</div>
