<div class="centered">
  <p id="notice"><%= notice %></p>

  <h1><%= t('player.players') %></h1>

  <%= search_form_for @q do |f| %>
      <%= f.search_field :name_cont, placeholder:'Nome do jogador', class:"form-control col-lg-4 col-md-5 col-sm-6 col-xs-6" %>
      <%= f.submit class:"btn btn-outline-success" %>
  <% end %>
  <br/>
  <table class="table table-striped table-dark table-hover">
    <thead  class="thead-dark">
      <tr>
        <th><%= t('name') %></th>
        <th><%= t('player.birth') %></th>
        <th><%= t('club.club-title') %></th>
        <th><%= t('player.trophy') %></th>
        <th colspan="3"><%= t('options') %></th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <!-- <td id="imgtag"><%= image_tag "soccerplayer.png"%></td> -->
          <td><%= player.name %></td>
          <td><%= player.birth %></td>
          <td><%= player.clube.name %></td>
          <td><%= player.trophy %></td>
          <td><%= link_to t('show'), player %></td>
          <td><%= link_to t('edit'), edit_player_path(player) %></td>
          <td><%= link_to t('destroy'), player, method: :delete, data: { confirm: t('confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('player.new'), new_player_path, class:"btn btn-success" %>
  <%= link_to t('back'), root_path, class:"btn btn-dark" %>
</div>
