<div class="centered">
  <p id="notice"><%= notice %></p>

  <h1>Players</h1>

  <%= search_form_for @q do |f| %>
      <%= f.search_field :name_cont, placeholder:'Nome do jogador', class:"form-control col-lg-4 col-md-5 col-sm-6 col-xs-6" %>
      <%= f.submit class:"btn btn-outline-success" %>
  <% end %>
  <br/>
  <table class="table table-striped table-dark table-hover">
    <thead  class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Birth</th>
        <th>Clube</th>
        <th>Trophy</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <!-- <td id="imgtag"><%= image_tag "soccerplayer.png"%></td> -->
          <td><%= player.name %></td>
          <td><%= player.birth %></td>
          <td><%= player.clube.name %></td>
          <td><%= player.trophy %></td>
          <td><%= link_to 'Show', player %></td>
          <td><%= link_to 'Edit', edit_player_path(player) %></td>
          <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Player', new_player_path, class:"btn btn-success" %>
  <%= link_to 'Back', root_path, class:"btn btn-dark" %>
</div>
