<div class="centered">
  <p id="notice"><%= notice %></p>

  <h1>Clubes</h1>

  <%= search_form_for @q do |f| %>
      <%= f.search_field :name_cont, placeholder:'Nome do clube', class:"form-control col-lg-4 col-md-5 col-sm-6 col-xs-6" %>
      <%= f.submit class:"btn btn-outline-success" %>
  <% end %>
  <br/>
  <table class="table table-dark">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Birth</th>
        <th>Campeonato</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @clubes.each do |clube| %>
        <tr>
          <td><%= clube.name %></td>
          <td><%= clube.birth %></td>
          <td><%= clube.campeonato.name %></td>
          <td><%= link_to 'Show', clube %></td>
          <td><%= link_to 'Edit', edit_clube_path(clube) %></td>
          <td><%= link_to 'Destroy', clube, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Clube', new_clube_path, class:"btn btn-success" %>
  <%= link_to 'Back', root_path, class:"btn btn-dark" %>
</div>
