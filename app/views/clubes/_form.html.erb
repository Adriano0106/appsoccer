<div class="centered">
  <%= form_with(model: clube, local: true) do |form| %>
    <% if clube.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(clube.errors.count, "error") %> prohibited this clube from being saved:</h2>

        <ul>
        <% clube.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group col-lg-4 col-md-5 col-sm-6 col-xs-6">
      <%= form.label t('name') %>
      <%= form.text_field :name, class: "form-control centered" %>
    </div>

    <div class="form-group col-lg-4 col-md-5 col-sm-6 col-xs-6">
      <%= form.label t('club.birth') %>
      <%= form.number_field :birth, class: "form-control centered" %>
    </div>

    <div class="form-group col-lg-4 col-md-5 col-sm-6 col-xs-6">
      <%= form.label :campeonato_id %>
      <%= collection_select(:clube, :campeonato_id, @campeonato_options, :id, :name, {class: 'form-control centered'}) %>
    </div>

    <div class="actions">
      <%= form.submit class:"btn btn-success"%>
    </div>
  <% end %>
</div>
