<div class="centered">
  <p id="notice"><%= notice %></p>

  <h1>Campeonatos</h1>

  <%= search_form_for @q do |f| %>
      <%= f.search_field :name_cont, placeholder:'Nome do campeonato', class:"form-control col-lg-4 col-md-5 col-sm-6 col-xs-6"  %>
      <%= f.submit class:"btn btn-outline-success" %>
  <% end %>
  <br/>

  <table class="table table-striped table-dark table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @campeonatos.each do |campeonato| %>
        <tr>
          <td><%= campeonato.name %></td>
          <td><%= campeonato.description %></td>
          <td><%= link_to 'Show', campeonato %></td>
          <td><%= link_to 'Edit', edit_campeonato_path(campeonato) %></td>
          <td><%= link_to 'Destroy', campeonato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Campeonato', new_campeonato_path, class:"btn btn-success" %>
  <%= link_to 'Back', root_path, class:"btn btn-dark" %>
</div>
