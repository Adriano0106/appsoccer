<div class="centered">
    <p id="notice"><%= notice %></p>

    <div class="form-group col-lg-4 col-md-5 col-sm-6 col-xs-6">
      <p>
        <strong><%= t('name') %>:</strong>
        <div class="form-control">
          <%= @campeonato.name %>
        </div>
      </p>
    </div>

    <div class="form-group col-lg-4 col-md-5 col-sm-6 col-xs-6">
      <p>
        <strong><%= t('description') %>:</strong>
        <textarea class="form-control">
          <%= @campeonato.description %>
        </textarea>
      </p>
    </div>

    <%= link_to t('edit'), edit_campeonato_path(@campeonato),  class: "btn btn-secondary" %>
    <%= link_to t('back'), campeonatos_path,  class: "btn btn-secondary" %>
</div>
